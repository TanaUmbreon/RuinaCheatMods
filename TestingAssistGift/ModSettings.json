{
  // [前提]
  // この設定ファイルは JSON 形式 (コメント可能な JSON 形式) で記述しています。
  // JSON の記述ルールについては説明を割愛します。
  // このコメントでは当 MOD で使用する各設定項目の概要と仕様を説明しています。

  // [この設定ファイルがリロードされるタイミング]
  // ・舞台の開始時
  // ・味方キャラクターに追加される特殊バトルページ「設定リロード」の装着時


  // 戦闘表象「月光の輪」の効果が有効であることを表すフラグです。
  // true の場合は、設定項目 "ApplyingEffectName" および "Effects" に指定された値に基づいて、各キャラクターが効果を発揮します。
  // false の場合は、全てのキャラクターが効果を発揮しません。
  // また、どちらの値であっても、全ての味方キャラクターに設定ファイルリロード用の特殊バトルページを追加します。
  // (有効値: true, false / 既定値: false)
  "Enabled": true,

  // 各キャラクター毎に適用する効果を効果名で指定します。
  // 効果名は、設定項目 "Effects" 配列に指定しているオブジェクト要素の設定項目 "Name" で定義されているものを使用します。
  // 値が null または定義されていない効果名の場合は、そのキャラクターは何も効果を発揮しません。
  "ApplyingEffectName": {
    // 1番目の味方キャラクターに適用する効果名
    "Player1": "味方用1",
    // 2番目の味方キャラクターに適用する効果名
    "Player2": "味方用2",
    // 3番目の味方キャラクターに適用する効果名
    "Player3": "味方用2",
    // 4番目の味方キャラクターに適用する効果名
    "Player4": "味方用2",
    // 5番目の味方キャラクターに適用する効果名
    "Player5": "味方用2",

    // 1番目の敵キャラクターに適用する効果名
    "Enemy1": null,
    // 2番目の敵キャラクターに適用する効果名
    "Enemy2": null,
    // 3番目の敵キャラクターに適用する効果名
    "Enemy3": null,
    // 4番目の敵キャラクターに適用する効果名
    "Enemy4": null,
    // 5番目の敵キャラクターに適用する効果名
    "Enemy5": null
  },

  // 各キャラクターに適用できる効果を配列形式で指定します。
  // 設定項目 "Name" の値が効果名を表し、これによって各効果を識別します。
  // 同じ効果名が複数指定されている場合、最初に指定された効果が使用されます。
  "Effects": [
    {
      // 効果名
      "Name": "味方用1",

      // 能力値に加算するボーナス
      "StatBonus": {
        // 体力の最大値増加量 (有効範囲: 0 ～ 500) (既定値: 0)
        "HpAdder": 50,
        // 混乱抵抗値の最大値増加量 (有効範囲: 0 ～ 500) (既定値: 0)
        "BreakGageAdder": 25,
        // 光の最大値増加量 (有効範囲: 0 ～ 5) (既定値: 0)
        "PlayPointAdder": 1
      },

      // 毎幕回復するステータス
      "RecoveringStatOnRoundStart": {
        // 体力の回復量 (有効範囲: 0 ～ 1000) (既定値: 0)
        "HpRecover": 5,
        // 混乱抵抗値の回復量 (有効範囲: 0 ～ 1000) (既定値: 0)
        "BreakRecover": 2,
        // 光の回復量 (有効範囲: 0 ～ 10) (既定値: 0)
        "PlayPointRecover": 1
      },

      // 毎幕付与する状態とその付与数 (有効範囲: 0 ～ 50) (既定値: 0)
      "AddingBufsOnRoundStart": {
        // パワー
        "Strength": 1,
        // 虚弱
        "Weak": 0,
        // 忍耐
        "Endurance": 1,
        // 武装解除
        "Disarm": 0,
        // クイック
        "Quickness": 1,
        // 束縛
        "Binding": 0,
        // 保護
        "Protection": 1,
        // 脆弱
        "Vulnerable": 0,
        // 混乱保護
        "BreakProtection": 1,
        // 火傷
        "Burn": 0,
        // 麻痺
        "Paralysis": 0,
        // 出血
        "Bleeding": 0
      }
    },

    {
      // 効果名
      "Name": "味方用2",

      // 能力値に加算するボーナス
      "StatBonus": {
        // 体力の最大値増加量 (有効範囲: 0 ～ 500) (既定値: 0)
        "HpAdder": 10,
        // 混乱抵抗値の最大値増加量 (有効範囲: 0 ～ 500) (既定値: 0)
        "BreakGageAdder": 5,
        // 光の最大値増加量 (有効範囲: 0 ～ 5) (既定値: 0)
        "PlayPointAdder": 0
      },

      // 毎幕回復するステータス
      "RecoveringStatOnRoundStart": {
        // 体力の回復量 (有効範囲: 0 ～ 1000) (既定値: 0)
        "HpRecover": 2,
        // 混乱抵抗値の回復量 (有効範囲: 0 ～ 1000) (既定値: 0)
        "BreakRecover": 2,
        // 光の回復量 (有効範囲: 0 ～ 10) (既定値: 0)
        "PlayPoint": 0
      },

      // 毎幕付与する状態とその付与数 (有効範囲: 0 ～ 50) (既定値: 0)
      "AddingBufsOnRoundStart": {
        // パワー
        "Strength": 0,
        // 虚弱
        "Weak": 0,
        // 忍耐
        "Endurance": 0,
        // 武装解除
        "Disarm": 0,
        // クイック
        "Quickness": 0,
        // 束縛
        "Binding": 0,
        // 保護
        "Protection": 0,
        // 脆弱
        "Vulnerable": 0,
        // 混乱保護
        "BreakProtection": 0,
        // 火傷
        "Burn": 0,
        // 麻痺
        "Paralysis": 0,
        // 出血
        "Bleeding": 0
      }
    },

    {
      // 効果名
      "Name": "敵用1",

      // 能力値に加算するボーナス
      "StatBonus": {
        // 体力の最大値増加量 (有効範囲: 0 ～ 500) (既定値: 0)
        "HpAdder": 100,
        // 混乱抵抗値の最大値増加量 (有効範囲: 0 ～ 500) (既定値: 0)
        "BreakGageAdder": 0
      }
    }
  ]
}
